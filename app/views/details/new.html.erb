<div class="detail-new cmn-form">
  <div class="inner">
    <h1 class="ttl">5w1h新規作成</h1>
    <%= form_for(@detail) do |f| %>
    <%= hidden_field_tag :favorite_id, @favorite.id  %>
    <div class="form-item">
      <%= f.label :name, 'What', class: "txtm" %>
      <%= f.text_field :name, value: @item.name,  :placeholder => "何を買いたいですか？" %>
    </div>
    <div class="form-item input-group" data-target-input="nearest">
      <%= f.label :purchase_date, 'When', class: "txtm" %>
      <%= f.text_field :purchase_date, id: "purchase_date", class: "form-control datepicker", data: { target: '#purchase_date'} ,:placeholder => "いつ買いたいですか？" %>
      <div class="input-group-append" data-target="#purchase_date" data-toggle="datetimepicker">
        <div class="input-group-text">
          <i class="fa fa-calendar">カレンダー</i>
        </div>
      </div>
    </div>
    <div class="form-item">
      <%= f.label :place, 'Where', class: "txtm" %>
      <%= f.text_field :place, :placeholder => "どこで買いたいですか？" %>
    </div>
    <div class="form-item">
      <%= f.label :person, 'Who', class: "txtm" %>
      <%= f.text_field :person, :placeholder => "誰に買いますか？" %>
    </div>
    <div class="form-item">
      <%= f.label :reason, 'Why', class: "txtm" %>
      <%= f.text_area :reason, :placeholder => "なぜ買いたいですか？" %>
    </div>
    <div class="form-item">
      <%= f.label :way, 'How', class: "txtm" %>
      <%= f.text_area :way, :placeholder => "どのようにして買いたいですか？" %>
    </div>
    <%= f.submit '完了',class: "btnl" %>
    <% end %>
  </div>
</div>