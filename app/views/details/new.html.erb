<div class="detail-new cmn-form">
  <div class="inner">
    <h1 class="ttl">5w1h新規作成</h1>
    <%= form_for(@detail) do |f| %>
    <%= hidden_field_tag :favorite_id, @favorite.id  %>
    <div class="form-item">
      <%= f.label :name, 'What', class: "txtm" %>
      <%= f.text_field :name, value: @item.name,  :placeholder => "name" %>
    </div>
    <div class="form-item">
      <%= f.label :purchase_date, 'When', class: "txtm" %>
      <%= f.text_field :purchase_date,  :placeholder => "purchase_date" %>
    </div>
    <div class="form-item">
      <%= f.label :place, 'Where', class: "txtm" %>
      <%= f.text_field :place, :placeholder => "place" %>
    </div>
    <div class="form-item">
      <%= f.label :person, 'Who', class: "txtm" %>
      <%= f.text_field :person, :placeholder => "person" %>
    </div>
    <div class="form-item">
      <%= f.label :reason, 'Why', class: "txtm" %>
      <%= f.text_area :reason, :placeholder => "reason" %>
    </div>
    <div class="form-item">
      <%= f.label :way, 'How', class: "txtm" %>
      <%= f.text_area :way, :placeholder => "way" %>
    </div>
    <%= f.submit '完了',class: "btnl" %>
    <% end %>
  </div>
</div>