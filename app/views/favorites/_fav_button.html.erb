<% if current_user.fav?(item) %>
<%= form_tag(favorite_path(item.id), method: :delete) do %>
<%= hidden_field_tag :item_id, item.id %>
<%= submit_tag '登録解除', class: 'btn' %>
<% end %>
<% else %>
<%= form_tag(favorites_path) do %>
<%= hidden_field_tag :item_code, item.code %>
<%= submit_tag '登録', class: 'btn' %>
<% end %>
<% end %>