<% if items %>
<div class="inner">
    
  <div class="items">
    
    <% items.each do |item| %>
    <div class="item">
      <div class="item-top">
        <div class="item-img">   
          <img src="<%= item.image_url %>">
        </div>
      </div>
      <div class="item-btn">
        <% if item %>
        <p class="item-name"><%= item.name %></p>
        <p class="item-price"><%= item.price %>円</p>
        <% if user_signed_in? %>
        <%= render 'favorites/fav_button', item: item %>

        
        <% if current_user.fav?(item) %>
        <%= link_to "商品詳細", item_path(item), class: "detail-btn" %>
        <% end %>
        
        <% end %>
        <% end %>
      </div>
    </div>
    <% end %>
    
  </div>
  
</div>  
<% end %>