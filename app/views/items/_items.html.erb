<% if items %>
<div class="items">
  <% items.each do |item| %>
  <div class="item">
    <div class="item-top">
      <div class="item-img">
        <img src=<%= item.image_url %>>
      </div>
    </div>
    <div class="item-btm">
      <% if item %>
      <p class="item-name">
        <%= item.name %>
      </p>
      <p class="item-price">
        <%= item.price %>円
      </p>
      <div class="btns">
        <% if user_signed_in? %>
        <%= render 'favorites/fav_button', item: item %>
        <% if current_user.fav?(item) %>
        <%= link_to "商品詳細", item_path(item), class: "btn" %>
        <% end %>
      </div>
      <% end %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
<% end %>